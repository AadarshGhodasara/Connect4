    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane GridPane.columnSpan="2" />
      <Pane fx:id="insertedDiscsPane" prefHeight="400.0" prefWidth="200.0" GridPane.rowIndex="1" />
      <VBox prefWidth="400.0" style="-fx-background-color: #2B3B4C;" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <Region prefHeight="46.0" prefWidth="400.0" />
            <Pane prefHeight="242.0" prefWidth="400.0">
               <children>
                  <TextField fx:id="textFieldOne" focusTraversable="false" layoutX="30.0" layoutY="34.0" prefHeight="45.0" prefWidth="345.0" promptText="Player One Name">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="textFieldTwo" focusTraversable="false" layoutX="30.0" layoutY="82.0" prefHeight="42.0" prefWidth="345.0" promptText="Player Two Name">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </TextField>
                  <Button fx:id="setName" layoutX="33.0" layoutY="154.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="345.0" text="Set Name">
                     <font>
                        <Font size="20.0" />
                     </font></Button>
               </children>
            </Pane>
            <Region prefHeight="57.0" prefWidth="400.0" />
            <Label fx:id="playerNameLabel" alignment="CENTER" prefHeight="43.0" prefWidth="543.0" text="Player One" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="45.0" />
               </font></Label>
            <Label alignment="CENTER" prefHeight="38.0" prefWidth="548.0" text="Turn" textFill="WHITE">
               <font>
                  <Font size="35.0" />
               </font></Label>
            <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
    </children>
</GridPane>
